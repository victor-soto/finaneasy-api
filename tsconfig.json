{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/application/*": ["src/application/*"],
      "@/domain/*": ["src/domain/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "typeorm.config.ts"]
}
